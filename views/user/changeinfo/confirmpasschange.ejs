<%- include("partials/header.ejs") %>
<div class="container" style="filter: blur(5px)">
  <%- include("partials/headerbar.ejs") %>
  <div class="rest">
    <div class="infobar">
      <div class="textandinput">
        <div>Mật khẩu hiện tại</div>
        <div>
          <input
            class="enter"
            name="currentPassword"
            value="<%= currentPassword %>"
            readonly
          />
        </div>
      </div>
      <div class="textandinput">
        <div>Mật khẩu mới</div>
        <div>
          <input
            class="enter"
            name="newPassword"
            value="<%= newPassword %>"
            readonly
          />
        </div>
      </div>
      <div class="textandinput">
        <div>Xác nhận mật khẩu mới</div>
        <div>
          <input
            class="enter"
            name="confirmPassword"
            value="<%= confirmPassword %>"
            readonly
          />
        </div>
      </div>
    </div>
    <div class="changepassbtn">
      <form action="/changepassword" method="POST">
        <input
          class="passtxt"
          id="short1"
          class="headertext"
          type="submit"
          name="thaydoi"
          value="Thay đổi mật khẩu"
        />
      </form>
    </div>
  </div>
</div>
<div class="popup">
  <div class="popup-content">
    <div class="firsttext">Xác nhận thay đổi mật khẩu</div>
    <div class="secondtext">Mật khẩu sẽ được thay đổi</div>
    <div class="confirm">
      <form action="/main" method="POST">
        <input
          class="passtxt"
          id="short1"
          class="headertext"
          type="submit"
          name="thaydoi"
          value="XÁC NHẬN"
        />
      </form>
    </div>
  </div>
</div>
<%- include("partials/footer.ejs") %>
