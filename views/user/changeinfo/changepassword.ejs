<%- include("partials/header.ejs") %>
<div class="container">
  <%- include("partials/headerbar.ejs") %>
  <div class="rest">
    <form action="/confirmpasschange" method="POST">
      <div class="infobar">
        <div class="textandinput">
          <div>Mật khẩu hiện tại</div>
          <div>
            <input class="enter" name="currentPassword" required />
          </div>
        </div>
        <div class="textandinput">
          <div>Mật khẩu mới</div>
          <div>
            <input class="enter" name="newPassword" />
          </div>
        </div>
        <div class="textandinput">
          <div>Xác nhận mật khẩu mới</div>
          <div>
            <input class="enter" name="confirmPassword" required />
          </div>
        </div>
      </div>
      <div class="changepassbtn">
        <button
          class="passtxt"
          id="short1"
          class="headertext"
          type="submit"
          name="usernamepass"
          value="<%if(locals.usernamepass){%><%= usernamepass %><%}%>"
          style="margin: 20px"
        >
          <div class="TextInTheButton">THAY ĐỔI MẬT KHẨU</div>
        </button>
      </div>
    </form>
  </div>
</div>
<%- include("partials/footer.ejs") %>
