<%- include("partials/header.ejs") %>
<div class="container">
  <%- include("partials/headerbar.ejs") %>
  <div class="rest">
    <form action="/confirminfochange" method="POST">
      <div class="infobar">
        <div class="textandinput">
          <div>Họ và tên</div>
          <div>
            <input class="enter" name="hovaten" required />
          </div>
        </div>
        <div class="textandinput">
          <div>Email</div>
          <div>
            <input class="enter" type="email" name="email" required />
          </div>
        </div>
        <div class="textandinput">
          <div>Số điện thoại</div>
          <div>
            <input class="enter" name="sdt" required />
          </div>
        </div>
      </div>
      <div class="changepassbtn">
        <button
          class="passtxt"
          id="short1"
          class="headertext"
          type="submit"
          name="username"
          value="<%if(locals.username){%><%=username%><%}%>"
          style="margin: 30px"
        >
          <div class="TextInTheButton">THAY ĐỔI THÔNG TIN</div>
        </button>
      </div>
    </form>
  </div>
</div>
